# Basic Settings
set shell bash
set hidden true
set ignorecase true
set icons true
set promptfmt "\033[34;1m%d\033[0m\033[1m%f\033[0m"
# set drawbox true
set preview true
set cursorpreviewfmt "\033[7;90m"

${{
    w=$(tput cols)
    if [ $w -le 80 ]; then
        lf -remote "send $id set ratios 1:2"
    elif [ $w -le 160 ]; then
        lf -remote "send $id set ratios 1:2:3"
    else
        lf -remote "send $id set ratios 1:2:3:5"
    fi
}}




# unbinds
map e
