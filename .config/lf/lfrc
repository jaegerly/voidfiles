map h
map f
map r


# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd chmod ${{
  printf "x $f ?: "
  read ans

  for file in "$fx"
  do
   chmod +$ans $file
  done

  lf -remote 'send reload'
}}


