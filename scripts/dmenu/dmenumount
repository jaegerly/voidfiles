#!/bin/bash

pgrep -x dmenu && exit

mountable=$(lsblk -lp | grep "part $" | awk '{print $1, "(" $4 ")"}')
[ "$mountable" = "" ] && exit 1
chosen=$(echo "$mountable" | dmenu -f -i -p "ðŸ’¿ what to mount tho" | awk '{print $1}')
[ "$chosen" = "" ] && exit 1
doas mount $chosen ~/mnt && pgrep -x dunst && notify-send "$chosen mounted"
