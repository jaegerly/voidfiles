#!/bin/sh

chosen=$(cut -d ';' -f1 ~/.local/share/icons/myicons/* | rofi -matching fuzzy -dmenu -i -p "ðŸ˜‘ icons" | sed "s/ .*//")

# Exit if none chosen.
[ -z "$chosen" ] && exit

if [ -n "$1" ]; then
	xdotool type "$chosen"
else
	printf "%s" "$chosen" | xclip -selection clipboard
	notify-send "'$chosen' copied to clipboard." &
fi
